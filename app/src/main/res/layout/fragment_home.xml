<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/txt_congress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway"
            android:text="@string/congress_arg"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:fontFamily="@font/raleway_semibold"
            app:layout_constraintEnd_toEndOf="@+id/txt_congress_of_patients"
            app:layout_constraintStart_toStartOf="@+id/txt_congress_of_patients"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_congress_of_patients"
            android:layout_width="298dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway"
            android:text="@string/patients"
            android:textAlignment="center"
            android:textColor="@color/violet"
            android:textSize="20sp"
            app:fontFamily="@font/raleway_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toEndOf="@+id/image_logo_congreso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_congress" />

        <ImageView
            android:id="@+id/image_logo_congreso"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_congress_of_patients"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_main_logo"
            tools:srcCompat="@drawable/ic_main_logo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_logo_congreso">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_home_news">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="125dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginLeft="60dp"
                            android:backgroundTint="@color/white"
                            android:elevation="6dp"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="90dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:backgroundTint="@color/white"
                            android:elevation="6dp"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView"
                            app:layout_constraintTop_toTopOf="parent"></androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_home_schedule">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginLeft="60dp"
                            android:backgroundTint="@color/white"
                            android:elevation="6dp"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="90dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:backgroundTint="@color/white"
                            android:elevation="6dp"
                            app:cardCornerRadius="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView2"
                            app:layout_constraintTop_toTopOf="parent">

                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/image_quantity_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_quantity_days"
                    app:layout_constraintEnd_toEndOf="@+id/txt_quantity_of_days"
                    app:layout_constraintStart_toEndOf="@+id/txt_quantity_days"
                    app:layout_constraintTop_toTopOf="@+id/txt_quantity_days"
                    app:srcCompat="@drawable/ic_calendar"
                    tools:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/txt_quantity_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/quantity_days"
                    android:textColor="@color/violet"
                    android:textSize="28sp"
                    app:fontFamily="@font/muli_extrabold"
                    app:layout_constraintStart_toStartOf="@+id/txt_quantity_of_days"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_home_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/home_schedule"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

                <TextView
                    android:id="@+id/txt_quantity_of_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/days_for_congress"
                    android:textColor="@color/violet"
                    android:textSize="14sp"
                    app:fontFamily="@font/muli_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_quantity_days" />

                <TextView
                    android:id="@+id/txt_home_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/home_news"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_quantity_of_days" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>