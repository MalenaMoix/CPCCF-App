<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <androidx.cardview.widget.CardView
        android:layout_width="277dp"
        android:layout_height="145dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp">

            <EditText
                android:id="@+id/editText_chat_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Hall de entrada"
                android:textSize="14sp"
                app:fontFamily="@font/muli_light"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/editText_lecturer_name" />

            <EditText
                android:id="@+id/editText_lecturer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Dra. Marisa Aizenberg"
                android:textSize="16sp"
                app:fontFamily="@font/muli_semibold"
                app:layout_constraintStart_toStartOf="@+id/editText_chat_name"
                app:layout_constraintTop_toBottomOf="@+id/editText_chat_name" />

            <EditText
                android:id="@+id/editText_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                app:fontFamily="@font/muli_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Acreditacion y entrega de documentacion" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                app:layout_constraintStart_toStartOf="@+id/editText_lecturer_name"
                app:layout_constraintTop_toBottomOf="@+id/editText_lecturer_name"
                tools:srcCompat="@drawable/ic_placeholder" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>