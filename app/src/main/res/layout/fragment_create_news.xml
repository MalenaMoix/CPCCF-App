<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_title_creation_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/muli_bold"
        android:text="@string/txt_title_create_news"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:fontFamily="@font/raleway_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_title_news"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:hint="@string/hint_title_news"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_creation_news" />

    <EditText
        android:id="@+id/et_content_news"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/hint_content_news"
        android:inputType="textMultiLine"
        android:lines="3"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_title_news"
        app:layout_constraintStart_toStartOf="@+id/et_title_news"
        app:layout_constraintTop_toBottomOf="@+id/et_title_news" />

    <Button
        android:id="@+id/btn_create_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_continue"
        android:text="@string/btn_create_news"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content_news" />
</androidx.constraintlayout.widget.ConstraintLayout>