<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".activities.LogIn">

    <!-- Bienvenido -->
    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="250dp"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/bienvenido"
        android:textAppearance="@style/bienvenido"
        app:fontFamily="@font/raleway_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Congreso argentino de -->
    <TextView
        android:id="@+id/congreso_ar"
        android:layout_width="213dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|top"
        android:text="@string/congreso_ar"
        android:textAppearance="@style/congreso_ar"
        app:fontFamily="@font/raleway_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenido" />

    <!-- PACIENTES CON CÁNCER Y FAMILIARES -->
    <TextView
        android:id="@+id/pacientes_c"
        android:layout_width="215dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/pacientes_c"
        android:textAppearance="@style/pacientes_c"
        app:fontFamily="@font/raleway_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/congreso_ar" />

    <!-- Main logo -->
    <ImageView
        android:layout_width="68dp"
        android:layout_height="196dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_main_logo"
        app:layout_constraintEnd_toStartOf="@+id/congreso_ar"
        app:layout_constraintTop_toBottomOf="@+id/bienvenido" />

    <!-- Email -->
    <EditText
        android:id="@+id/email"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/rectangle_email_password"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pacientes_c" />

    <!-- Password -->
    <EditText
        android:id="@+id/password"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_email_password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <!-- Crear cuenta -->
    <TextView
        android:id="@+id/crear_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:text="@string/crear_cuenta"
        android:textColor="@color/violet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <!-- Olvidaste la password -->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="@string/forgot_password"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <!-- CONTINUAR -->
    <Button
        android:id="@+id/button_continuar"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_continuar"
        android:elevation="4dp"
        android:text="@string/button_continuar"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fontFamily="@font/muli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>